<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
	<head>
	</head>
	<body>
		<div class="villaMenus">
			<ul>
				<li><a href="/sessions/new" target="_self" class="lev1akt">Anmelden</a></li>
				<li><a href="/kundes/new" target="_self" class="lev1">Registrieren</a></li>
			</ul>
		</div>
	     
		<div id="content_middle">
			<br/>
			<p class="head">Anmeldung</p>
			<br/>
			
			<%= form_tag sessions_path do %>
			  <div class="field">
			    <%= label_tag :email,nil, :style=>"width: 100px; margin-right:24.0px;"%>
			    <%= text_field_tag :email, params[:email],:style=>"width: 200px;" %>
			  </div>
			  <div class="field">
			    <%= label_tag :password %>
			    <%= password_field_tag :password,nil,:style=>"width: 200px;" %>
			  </div>
			  <div class="actions"><%= submit_tag "Log in" %></div>
			<% end %>
			
		</div>
		
		<div id="images_right">
			<div id="htwg_logo">
				<a href="http://www.htwg-konstanz.de" target="_blank"><img src="/assets/logo_htwg.jpg"></a>
			</div>
			<div id="villa_pic2"/>
			<div id="villa_am_see">Villa am See</div>
		</div>
	</body>
</html>
